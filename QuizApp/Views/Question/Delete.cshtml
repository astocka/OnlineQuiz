@model QuizApp.Models.QuestionModel

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<p class="display-4">Delete question</p>
<hr />

<table class="table table-responsive">
    <thead>
    <tr class="bg-info">
        <th>QuizId</th>
        <th>Question</th>
        <th>Correct Answer</th>
        <th>Options</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>@Model.QuizId</td>
        <td>@Model.Question</td>
        <td>@Model.CorrectAnswer</td>
        <td>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </td>
    </tr>
    </tbody>
</table>

<div>
    <a asp-controller="Question" asp-action="Index">Back to List</a>
</div>