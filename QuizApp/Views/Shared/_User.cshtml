<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- CSS -->
    <link href="~/css/style.css" rel="stylesheet" />

    <title>Quiz App | User panel</title>
</head>
<body>
    <main role="main" class="container">
        <div class="container-fluid">
            <div class="row">
                <nav class="col-md-3 d-none d-md-block bg-light sidebar mt-3">
                    <div class="sidebar-sticky">
                        <div class="text-center">
                            <img src="~/images/logo/icons8-test-zaliczony-80.png" class="mt-3" />
                            <p class="h3">Quiz App</p>
                        </div>

                        <div class="text-center">
                            <img src="~/images/icons8-user-shield-64.png" class="mt-3" />
                            User panel
                        </div>
                        <div class="text-center mt-4">
                            <p class="h3">
                                Menu
                            </p>
                        </div>
                        <!-- Nav tabs -->
                        <ul class="nav flex-column text-center">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Index">
                                    <img src="~/images/icons8-person-at-home-64.png" />
                                    Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Quiz" asp-action="Index">
                                    <img src="~/images/icons8-todo-list-64.png" />
                                    Quizzes
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Quiz" asp-action="UserResult" asp-route-userName="@User.Identity.Name">
                                    <img src="~/images/icons8-exam-64.png" />
                                    My Results
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Quiz" asp-action="Ranking">
                                    <img src="~/images/icons8-prize-64.png" />
                                    Ranking
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="LogOut">
                                    <img src="~/images/icons8-customer-64.png" />
                                    Log out
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="ChangePassword">
                                    <img src="~/images/icons8-password-64.png" />
                                    Change password
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>

                <main role="main" class="col-md-9 ml-sm-auto col-lg-9 px-4 mt-3">
                    <div class="table-responsive">
                        @RenderBody()
                    </div>
                </main>
            </div>
        </div>
    </main>
    <!-- jQuery, Popper.js, Bootstrap JS, JavaScript -->
    <script src="~/lib/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/lib/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/scripts/site.js"></script>
    <script src="~/js/app.js" type="text/javascript"></script>
</body>
</html>
