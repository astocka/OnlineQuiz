<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- CSS -->
    <link href="~/css/style.css" rel="stylesheet" />

    <title>Quiz App | User panel</title>
</head>
<body>
    <main role="main" class="container">
        <div class="container-fluid">
            <div class="row">
                <nav class="col-md-3 d-none d-md-block bg-light sidebar">
                    <div class="sidebar-sticky">
                        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                            <span>Actions</span>
                        </h6>
                        <!-- Nav tabs -->
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Quiz" asp-action="Index">
                                    <img src="~/images/icons8-todo-list-64.png" />
                                    Quizzes
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link">
                                    <img src="~/images/icons8-exam-64.png" />
                                    My Results
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link">
                                    <img src="~/images/icons8-prize-64.png" />
                                    Ranking
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link">
                                    <img src="~/images/icons8-paper-plane-64.png" />
                                    Contact
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="ChangePassword">
                                    <img src="~/images/icons8-password-64.png" />
                                    Change password
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>

                <main role="main" class="col-md-9 ml-sm-auto col-lg-9 px-4">
                    <h2 class="display-4">User panel</h2>
                    <hr />
                    <div class="table-responsive">
                        @RenderBody()
                    </div>
                </main>
            </div>
        </div>
    </main>
    <!-- jQuery, Popper.js, Bootstrap JS, JavaScript -->
    <script src="~/lib/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/lib/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/scripts/site.js"></script>
    <script src="~/js/app.js" type="text/javascript"></script>
</body>
</html>
