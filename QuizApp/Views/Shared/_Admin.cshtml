<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- CSS -->
    <link href="~/css/style.css" rel="stylesheet" />

    <title>Quiz App | Admin panel</title>
</head>
<body>
    <main role="main" class="container">
        <div class="container-fluid">
            <div class="row">
                <nav class="col-md-3 d-none d-md-block bg-light sidebar">
                    <div class="sidebar-sticky">
                        <div class="text-center">
                            <img src="~/images/logo/icons8-test-zaliczony-80.png" class="mt-3" />
                            <p class="h3">Quiz App</p>
                        </div>

                        <div class="text-center">
                            <img src="~/images/icons8-administrative-tools-64.png" class="mt-3" />
                            Admin panel
                        </div>
                        <div class="text-center mt-4">
                            <p class="h3">
                                Menu
                            </p>
                        </div>
                      
                        <!-- Nav tabs -->
                        <ul class="nav flex-column text-center">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                    <img src="~/images/icons8-person-at-home-64.png" />
                                    Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Category" asp-action="Index">
                                    <img src="~/images/icons8-open-64.png"/>
                                    Categories <span class="sr-only">(current)</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Quiz" asp-action="Index">
                                    <img src="~/images/icons8-todo-list-64.png"/>
                                    Quizzes
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Question" asp-action="Index">
                                    <img src="~/images/icons8-questions-64.png"/>
                                    Questions
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link">
                                    <img src="~/images/icons8-exam-64.png"/>
                                    Results
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Quiz" asp-action="Ranking">
                                    <img src="~/images/icons8-prize-64.png"/>
                                    Ranking
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>

                <main role="main" class="col-md-9 ml-sm-auto col-lg-9 px-4">
                    <div class="table-responsive">
                        @RenderBody()
                    </div>
                </main>
            </div>
        </div>
    </main>
    <!-- jQuery, Popper.js, Bootstrap JS, JavaScript -->
    <script src="~/lib/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/lib/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/scripts/site.js"></script>
    <script src="~/js/app.js" type="text/javascript"></script>
</body>
</html>
