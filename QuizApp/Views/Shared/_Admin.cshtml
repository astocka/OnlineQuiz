<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- CSS -->
    <link href="~/css/style.css" rel="stylesheet" />

    <title>Quiz App | Admin panel</title>
</head>
<body>
    <main role="main" class="container">
        <div class="container-fluid">
            <div class="row">
                <nav class="col-md-3 d-none d-md-block bg-light sidebar">
                    <div class="sidebar-sticky">
                        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                            <span>Actions</span>
                        </h6>
                        <!-- Nav tabs -->
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Category" asp-action="Index">
                                    <img src="~/images/icons8-open-64.png" />
                                    Categories <span class="sr-only">(current)</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Quiz" asp-action="Index">
                                    <img src="~/images/icons8-todo-list-64.png" />
                                    Quizzes
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Question" asp-action="Index">
                                    <img src="~/images/icons8-questions-64.png" />
                                    Questions
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link">
                                    <img src="~/images/icons8-exam-64.png" />
                                    Results
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Quiz" asp-action="Ranking">
                                    <img src="~/images/icons8-prize-64.png" />
                                    Ranking
                                </a>
                            </li>
                        </ul>


                        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                            <span>Admin</span>
                        </h6>
                        <ul class="nav flex-column mb-2">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="LogOut">
                                    <img src="~/images/icons8-customer-64.png" />
                                    Log out
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="ChangePassword">
                                    <img src="~/images/icons8-password-64.png" />
                                    Change password
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <img src="~/images/icons8-database-import-64.png" />
                                    Initialize database
                                </a>
                        </ul>
                    </div>
                </nav>

                <main role="main" class="col-md-9 ml-sm-auto col-lg-9 px-4">
                    <h2 class="display-4">Admin panel</h2>
                    <hr />
                    <div class="table-responsive">
                        @RenderBody()
                    </div>
                </main>
            </div>
        </div>
    </main>
    <!-- jQuery, Popper.js, Bootstrap JS, JavaScript -->
    <script src="~/lib/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/lib/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/scripts/site.js"></script>
    <script src="~/js/app.js" type="text/javascript"></script>
</body>
</html>
