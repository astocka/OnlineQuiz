@model List<QuizApp.Models.ResultModel>

@if (User.IsInRole("Admin"))
{
    ViewData["Title"] = "Quiz App | Ranking";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
else
{
    ViewData["Title"] = "Quiz App | Ranking";
    Layout = "~/Views/Shared/_User.cshtml";
}
@{
    var i = 1;
}
<table class="table table-responsive">
    <thead>
    <tr class="bg-info">
        <th>No</th>
        <th>User</th>
        <th>Category</th>
        <th>Quiz</th>
        <th>Date</th>
        <th>Score</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>@item.UserName</td>
                <td>@item.QuizCategory</td>
                <td>@item.QuizTitle</td>
                <td>@item.AttemptDate</td>
                <td>@item.TotalScore</td>
            </tr>
            i += 1;
        }
    </tbody>
</table>

