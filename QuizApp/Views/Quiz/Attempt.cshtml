@model QuizApp.Models.AttemptModel

@{
    ViewData["Title"] = "Quiz App | Quiz";
    Layout = "~/Views/Shared/_User.cshtml";
}

<div class="card col-sm-6">
    <div class="card-body">
        <h2 class="card-title">Quiz: @ViewBag.QuizTitle</h2>
        <p class="card-text">
            <!-- form question -->
            <form asp-controller="Quiz" asp-action="Attempt" method="post">
                @foreach (var question in ViewBag.QuizQuestions)
                {
                    <div class="card">
                        <div class="card-header">
                            Question: @question.Question
                            <input type="hidden" asp-for="AttemptQuestion" value="@question.Question" />

                        </div>
                        <div class="card-body">
                            @foreach (var answer in question.Answers)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="AttemptAnswer" value="@answer.AnswerOption">
                                    <label class="form-check-label">
                                        @answer.AnswerOption
                                    </label>
                                </div>
                            }

                        </div>
                    </div>
                }

                <input type="hidden" asp-for="QuizCategory" value="@ViewBag.QuizCategory" />
                <input type="hidden" asp-for="QuizTitle" value="@ViewBag.QuizTitle" />
                <input type="hidden" asp-for="CorrectAnswer" value="@ViewBag.QuizCorrectAnswer" />
                <input type="hidden" asp-for="UserName" value="@ViewBag.QuizUserName" />
                <button class="btn btn-success" type="submit">Submit</button>
            </form>

            <!-- End form question -->
